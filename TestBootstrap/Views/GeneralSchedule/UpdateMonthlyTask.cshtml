@model MonthlyTask


@{
    ViewData["Title"] = "Update1";
}


<h3 class="p-2 bg-primary text-white text-center">Edit a task</h3>

<div class="row">

    <div class="col-md-6">
        <form asp-action="UpdateMonthlyTask" method="post">
            <div class="form-group">
                <label asp-for="MonthlyTaskId"></label>
                <input asp-for="MonthlyTaskId" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="TaskName"></label>
                <input asp-for="TaskName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                @*<input asp-for="Description" class="form-control" />*@
                <textarea class="form-control" input asp-for="Description" cols="5"> </textarea>
            </div>
            @*<div class="form-group">
                <label asp-for="Status"></label>
                <input asp-for="Status" class="form-control" />
            </div>*@
            @*<div class="form-group">
                    <label asp-for="Priority"></label>
                    <input asp-for="Priority" class="form-control" />
                </div>*@
            <div class="text-center">
                <button class="btn btn-outline-dark-rounded bg-light" type="submit">Save</button>
                <a asp-action="Index" class="btn btn-outline-dark-rounded bg-light">Cancel</a>
            </div>
        </form>
        </div>
</div>