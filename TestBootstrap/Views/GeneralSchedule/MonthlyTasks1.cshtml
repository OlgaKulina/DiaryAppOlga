            </div>
</form>
    <div>
        @if (Model.Count() == 0)
        {
            <div class="row">
                <div class="col text-center p-2">No tasks yet</div>
            </div>
        }
        else
        {
            @foreach (MonthlyTask item in Model)
            {
            <div class="row p-2">
                @*<div class="col-1">@item.MonthlyTaskId</div>*@
                <div class="col">@item.TaskName</div>
                <div class="col">@item.Description</div>
                <div class="col">@item.Priorities</div>
