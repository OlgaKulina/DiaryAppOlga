                           class="btn btn-outline-dark-rounded bg-light"><i class="fas fa-pencil-alt"></i>@*Edit*@</a>
                        <input type="hidden" name="Id" value="@item.MonthlyTaskId" />
                        <button type="submit" class="btn btn-outline-dark-rounded bg-danger">@*Delete*@<i class="far fa-trash-alt"></i></button>
                    </form>
                </div>
            </div>
            }
        }
