@using System.Globalization
@using Microsoft.AspNetCore.Localization
@model DiaryAppOlga.Models.Goals

@{
    ViewBag.Title = "Set your goal";

}


@*@{
        ViewData["Title"] = "AddGoal";
    }

    <h1>AddGoal</h1>*@

<div class="container-fluid py-lg-3 m-lg-3">
    <h1 class="text-lg-left font-weight-light">Set a goal</h1>
</div>
<hr />
<div class="row">

    <div class="col-md-6">
        <form asp-action="AddGoal" asp-controller="GeneralSchedule">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GoalId" class="control-label"></label>
                <input asp-for="GoalId" class="form-control" />
                <span asp-validation-for="GoalId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GoalName" class="control-label"></label>
                <input asp-for="GoalName" class="form-control" />
                <span asp-validation-for="GoalName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                @*<input asp-for="Description" class="form-control" />*@
                <textarea class="form-control" input asp-for="Description" cols="5"> </textarea>

                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />

                @*@Model.CalendarOptions.DefaultDate.ToString("dd/MM/yyyy")*@
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-dark-rounded bg-light" />
            </div>
        </form>
    </div>
</div>
@*back to list*@
<div>
    <a asp-action="Goals" class="btn btn-outline-dark-rounded bg-light">&nbsp;&nbsp;<i class="fas fa-backward"></i>&nbsp;&nbsp;</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

