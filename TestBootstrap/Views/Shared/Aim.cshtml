@model IEnumerable<DiaryAppOlga.Models.UserAim>

@{
    ViewData["Title"] = "Aim";
}

<div class="container-fluid py-lg-5 m-lg-3">
    <h1 class="text-lg-center font-weight-light">My Goals</h1>
</div> 

<div class="container-fluid m-lg-2">
    
        <table class="table table-responsive table-striped table-hover text-left">
            <tr><td>Goal</td><td>Start Date</td><td>End Date</td><td> </td></tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Aim</td>
                    <td>@item.StartDate</td>
                    <td>@item.EndDate </td>
                    <td>
                        <a asp-action="DetailsAim" asp-controller="UserAim" asp-route-id="@item.Id">Details</a>
                        <a asp-action="EditAim" asp-controller="UserAim" asp-route-id="@item.Id">Edit</a>
                        <a asp-action="DeleteAim" asp-controller="UserAim" asp-route-id="@item.Id">Delete</a>
                    </td>
                    
                </tr>
            }
        </table>
    
    
        <a class="btn btn-light btn-circle btn-circle-lg m-1" asp-action="CreateAim"> <img src="~/img/add.png" alt="" width="20" height="20" class="img-fluid">@*<strong>+</strong>*@ @*<i class="fas fa-plus"></i>*@</a>
    
    </div>
