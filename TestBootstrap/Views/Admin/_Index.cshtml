@using Microsoft.AspNetCore.Identity;
@*@model IEnumerable<DiaryAppOlga.Models.ApplicationUser>*@
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "_Index";
}


<div class="bg-primary card"><h4>Roles</h4></div>
<div class="text-danger" asp-validation-summary="ModelOnly"></div>
<table class="table table-bordered">
    <tr><th>Id</th><th>Name</th><th>Users</th></tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="4" class="text-center">No roles</td></tr>
    }
    else
    {
        foreach (var role in Model)
        {
            <tr>

                <td>@role.Id</td>
                <td>@role.Name</td>
                <td identity-role-"@role.Id"></td>

                <td>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="Edit"
                           asp-route-id="@role.Id">Edit</a>
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>
<a class="btn btn-primary" asp-action="Create">Create</a>


